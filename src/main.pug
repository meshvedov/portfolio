doctype html(lang='ru')
head
    meta(charset='UTF-8')
    |
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    |
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    |
    link(rel='shortcut icon', type='image/png', href='fav_forest.png')
    |
    title Portfolio | MSH
body
    // Header
    header#header.header
        .header__wrapper
            nav.navigation
                .socials
                    ul.socials__list
                        each val in ['vk', 'github', 'in']
                            li.socials__item
                                a.socials__link(href='#', target='_blank')
                                    svg(class="socials__svg socials__svg--"+val)
                                        use(xlink:href='assets/img/icons/sprite.svg#'+val)
                |
                .menu
                    a.menu__link(href='#')
                        svg.menu__svg
                            use(xlink:href='assets/img/icons/sprite.svg#hamburger')
            |
            .banner
                img.banner__img(src='assets/img/fashmark-men-trends-nature.png', alt='Image')
                |
                h2.banner__name Владимир Астахов
                |
                p.banner__text Личный сайт веб разработчика
                |
                a.banner__link(href='#')
                    svg.banner__arrow-down
                        use(xlink:href='assets/img/icons/sprite.svg#arrow_down')
        .header__decor
            img(src='assets/img/decor/portfolio-header.png', alt="Portfolio")
    |
    //About
    section#about.about
        .about__triangles
            svg(
                viewBox="0 0 1000 100"
                preserveAspectRatio="none"
                class="triangle triangle--white")
                polygon(points="0,0 0,100 1000,100")
            svg(
                viewBox="0 0 1000 100"
                preserveAspectRatio="none"
                class="triangle triangle--beige")
                polygon(points="0,100 1000,100 1000,0")
        .about__left
            .title
                h1 Обо мне
            .aboutme

        .about__right